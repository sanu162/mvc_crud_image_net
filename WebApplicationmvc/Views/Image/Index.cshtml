@model IEnumerable<WebApplicationmvc.Models.ImageView.Image>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="primary">Images List </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Image" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%; ">
        <thead>
            <tr>
                <th>Image Name</th>
                <th>Image</th>
                <th>Image Path</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                var ImagePath = "Content/Images/" + obj.Path;
                <tr>
                    <td>@obj.Name</td>
                    <td><img src="@ImagePath" height="100px" width="100px" /></td>
                    <td>@obj.Path</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Image" class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                            <a asp-controller="Image" class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


