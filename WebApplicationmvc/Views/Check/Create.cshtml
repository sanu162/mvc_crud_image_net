
@{
    ViewData["Title"] = "Create";
}

@model Check

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Catagory</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*display all the validation at a time*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span> @*display specific the validation at a time*@
        </div>
        <div class="mb-3">
            <label><input asp-for="Gender" value="M" type="radio" />Male</label>
            <label><input asp-for="Gender" value="F" type="radio" />Female</label>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px;">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back</a>
    </div>
</form>

